<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="0.0.1-setup" author="rl">
        <createTable tableName="item">
            <column name="ID" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ITEM_ID"/>
            </column>
            <column name="ITEM_SKU" type="varchar(255)"/>
            <column name="NAME" type="varchar(255)"/>
            <column name="STANDARD_PRICE" type="DECIMAL(19,4)"/>
        </createTable>

        <rollback>
            <delete tableName="item"/>
        </rollback>
    </changeSet>


</databaseChangeLog>